#include <stdio.h>
#include <stdlib.h>
#include <math.h>

    int main() {
float x1, x2, y1, y2, distancia;
	
printf("Escreva o valor de x1: ");
	scanf("%f", &x1);
	
printf("Escreva o valor de x2: ");
	scanf("%f", &x2);
	
printf("Escreva o valor de y1: ");
	scanf("%f", &y1);
	
printf("Escreva o valor de y2: ");
	scanf("%f", &y2);
	
	
	float powX = pow(x2-x1, 2);
	float powY = pow(y2-y1, 2);
	distancia = sqrt(powX + powY);

printf("Distancia: %.4f", distancia);
}

